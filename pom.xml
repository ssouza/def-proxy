<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.nebularis</groupId>
    <artifactId>def-proxy</artifactId>
    <name>Def-Proxy: Dynamic Proxy Utilities</name>
    <description>Tools for building dynamic proxies</description>
    <packaging>jar</packaging>
    <properties>
        <filter.dir>src/main/filters</filter.dir>
        <jmock.version>2.5.1</jmock.version>
    </properties>
    <scm>
        <connection>scm:git:https://github.com/hyperthunk/def-proxy.git</connection>
    </scm>
    <licenses>
        <license>
            <name>Apache 2</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
            <comments>A business-friendly OSS license</comments>
        </license>
    </licenses>
    <developers>
