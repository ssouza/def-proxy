            <url>http://www.warwick.ac.uk/go/ccare</url>
            <organization>British Telecommunications</organization>
            <organizationUrl>http://btplc.com/</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
        <developer>
            <id>BoyCook</id>
            <name>Craig Cook</name>
            <email>boycook at me dot com</email>
            <url>http://boycook.com</url>
            <organization>British Telecommunications</organization>
            <organizationUrl>http://btplc.com/</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
        <developer>
            <id>santoshph</id>
            <name>Santosh</name>
            <email></email>
            <organization>Infosys</organization>
            <organizationUrl>http://www.infosys.com/</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
        <developer>
            <id>dinu07</id>
            <name>Dinesh</name>
            <email></email>
